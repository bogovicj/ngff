{
    "multiscales": [
        {
            "version": "0.5-dev",
            "name": "example",
            "coordinateSystems" : [
                {"name": "microns", "axes": [ "traw", "c", "z", "y", "x" ]},
                {"name": "example", "axes": [ "t", "c", "z", "y", "x" ]}
            ],
            "axes": [
                {"name": "t", "type": "time", "unit": "millisecond"},
                {"name": "c", "type": "channel"},
                {"name": "z", "type": "space", "unit": "micrometer"},
                {"name": "y", "type": "space", "unit": "micrometer"},
                {"name": "x", "type": "space", "unit": "micrometer"}
            ],
            "datasets": [
                {
                    "path": "0",
                    "coordinateTransformations": [{
                        // the voxel size for the first scale level (0.5 micrometer)
                        "type": "scale",
                        "scale": [0.5, 0.5, 0.5],
                        "input" : [ "dim_2", "dim_3", "dim_4"],
                        "output" : [ "z", "y", "x" ]
                    }]
                },
                {
                    "path": "1",
                    "coordinateTransformations": [{
                        // the voxel size for the second scale level (downscaled by a factor of 2 -> 1 micrometer)
                        "type": "scale",
                        "scale": [1.0, 1.0, 1.0],
                        "input" : [ "dim_2", "dim_3", "dim_4"],
                        "output" : [ "z", "y", "x" ]
                    }]
                },
                {
                    "path": "2",
                    "coordinateTransformations": [{
                        // the voxel size for the third scale level (downscaled by a factor of 4 -> 2 micrometer)
                        "type": "scale",
                        "scale": [2.0, 2.0, 2.0],
                        "input" : [ "dim_2", "dim_3", "dim_4"],
                        "output" : [ "z", "y", "x" ]
                    }]
                }
            ],
            "coordinateTransformations": [{
                // the time unit (0.1 milliseconds), which is the same for each scale level
                "type": "scale",
                "scale": [0.1, 1.0],
                "input" : [ "dim_0", "dim_1" ],
                "output" : [ "t", "c" ]
            }],
            "type": "gaussian",
            "metadata": {
                "description": "the fields in metadata depend on the downscaling implementation. Here, the parameters passed to the skimage function are given",
                "method": "skimage.transform.pyramid_gaussian",
                "version": "0.16.1",
                "args": "[true]",
                "kwargs": {"multichannel": true}
            }
        }
    ]
}
